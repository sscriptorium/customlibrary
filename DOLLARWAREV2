local Library = {}
Library.__index = Library

-- Services
local TweenService = game:GetService("TweenService")
local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")
local CoreGui = game:GetService("CoreGui")
local HttpService = game:GetService("HttpService")

-- Main Library Table
local UILibrary = {
    Flags = {},
    Theme = {
        Primary = Color3.fromRGB(45, 45, 45),
        Secondary = Color3.fromRGB(35, 35, 35),
        Accent = Color3.fromRGB(100, 100, 255),
        Text = Color3.fromRGB(255, 255, 255),
        TextDark = Color3.fromRGB(200, 200, 200),
        Border = Color3.fromRGB(60, 60, 60)
    }
}

-- Utility Functions
local function Tween(instance, properties, duration)
    duration = duration or 0.3
    local tween = TweenService:Create(instance, TweenInfo.new(duration, Enum.EasingStyle.Quad, Enum.EasingStyle.Out), properties)
    tween:Play()
    return tween
end

local function CreateElement(class, properties)
    local element = Instance.new(class)
    for prop, value in pairs(properties) do
        element[prop] = value
    end
    return element
end

local function MakeDraggable(frame, handle)
    local dragging, dragInput, dragStart, startPos
    
    handle.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = true
            dragStart = input.Position
            startPos = frame.Position
            
            input.Changed:Connect(function()
                if input.UserInputState == Enum.UserInputState.End then
                    dragging = false
                end
            end)
        end
    end)
    
    handle.InputChanged:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseMovement then
            dragInput = input
        end
    end)
    
    UserInputService.InputChanged:Connect(function(input)
        if input == dragInput and dragging then
            local delta = input.Position - dragStart
            Tween(frame, {Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)}, 0.1)
        end
    end)
end

-- Create Window
function UILibrary:CreateWindow(config)
    config = config or {}
    local WindowName = config.Name or "UI Library"
    local LoadingEnabled = config.LoadingEnabled ~= false
    local KeySystem = config.KeySystem or false
    
    local Window = {
        Tabs = {},
        CurrentTab = nil
    }
    
    -- Create ScreenGui
    local ScreenGui = CreateElement("ScreenGui", {
        Name = HttpService:GenerateGUID(false),
        Parent = CoreGui,
        ZIndexBehavior = Enum.ZIndexBehavior.Sibling,
        ResetOnSpawn = false
    })
    
    -- Main Frame
    local MainFrame = CreateElement("Frame", {
        Name = "MainFrame",
        Parent = ScreenGui,
        BackgroundColor3 = UILibrary.Theme.Primary,
        BorderSizePixel = 0,
        Position = UDim2.new(0.5, -400, 0.5, -300),
        Size = UDim2.new(0, 800, 0, 600),
        ClipsDescendants = true
    })
    
    CreateElement("UICorner", {
        CornerRadius = UDim.new(0, 10),
        Parent = MainFrame
    })
    
    CreateElement("UIStroke", {
        Parent = MainFrame,
        Color = UILibrary.Theme.Border,
        Thickness = 2,
        ApplyStrokeMode = Enum.ApplyStrokeMode.Border
    })
    
    -- Top Bar
    local TopBar = CreateElement("Frame", {
        Name = "TopBar",
        Parent = MainFrame,
        BackgroundColor3 = UILibrary.Theme.Secondary,
        BorderSizePixel = 0,
        Size = UDim2.new(1, 0, 0, 50)
    })
    
    CreateElement("UICorner", {
        CornerRadius = UDim.new(0, 10),
        Parent = TopBar
    })
    
    local Title = CreateElement("TextLabel", {
        Name = "Title",
        Parent = TopBar,
        BackgroundTransparency = 1,
        Position = UDim2.new(0, 15, 0, 0),
        Size = UDim2.new(0, 300, 1, 0),
        Font = Enum.Font.GothamBold,
        Text = WindowName,
        TextColor3 = UILibrary.Theme.Text,
        TextSize = 18,
        TextXAlignment = Enum.TextXAlignment.Left
    })
    
    -- Close Button
    local CloseButton = CreateElement("TextButton", {
        Name = "CloseButton",
        Parent = TopBar,
        BackgroundColor3 = Color3.fromRGB(255, 60, 60),
        BorderSizePixel = 0,
        Position = UDim2.new(1, -40, 0, 10),
        Size = UDim2.new(0, 30, 0, 30),
        Font = Enum.Font.GothamBold,
        Text = "X",
        TextColor3 = Color3.fromRGB(255, 255, 255),
        TextSize = 16
    })
    
    CreateElement("UICorner", {
        CornerRadius = UDim.new(0, 6),
        Parent = CloseButton
    })
    
    CloseButton.MouseButton1Click:Connect(function()
        ScreenGui:Destroy()
    end)
    
    CloseButton.MouseEnter:Connect(function()
        Tween(CloseButton, {BackgroundColor3 = Color3.fromRGB(255, 80, 80)})
    end)
    
    CloseButton.MouseLeave:Connect(function()
        Tween(CloseButton, {BackgroundColor3 = Color3.fromRGB(255, 60, 60)})
    end)
    
    -- Tab Container
    local TabContainer = CreateElement("Frame", {
        Name = "TabContainer",
        Parent = MainFrame,
        BackgroundColor3 = UILibrary.Theme.Secondary,
        BorderSizePixel = 0,
        Position = UDim2.new(0, 10, 0, 60),
        Size = UDim2.new(0, 150, 1, -70)
    })
    
    CreateElement("UICorner", {
        CornerRadius = UDim.new(0, 8),
        Parent = TabContainer
    })
    
    local TabList = CreateElement("UIListLayout", {
        Parent = TabContainer,
        SortOrder = Enum.SortOrder.LayoutOrder,
        Padding = UDim.new(0, 5)
    })
    
    CreateElement("UIPadding", {
        Parent = TabContainer,
        PaddingTop = UDim.new(0, 10),
        PaddingLeft = UDim.new(0, 10),
        PaddingRight = UDim.new(0, 10),
        PaddingBottom = UDim.new(0, 10)
    })
    
    -- Content Container
    local ContentContainer = CreateElement("Frame", {
        Name = "ContentContainer",
        Parent = MainFrame,
        BackgroundTransparency = 1,
        Position = UDim2.new(0, 170, 0, 60),
        Size = UDim2.new(1, -180, 1, -70)
    })
    
    MakeDraggable(MainFrame, TopBar)
    
    -- Create Tab
    function Window:CreateTab(config)
        config = config or {}
        local TabName = config.Name or "Tab"
        local TabIcon = config.Icon
        
        local Tab = {
            Name = TabName,
            Sections = {}
        }
        
        -- Tab Button
        local TabButton = CreateElement("TextButton", {
            Name = "TabButton",
            Parent = TabContainer,
            BackgroundColor3 = UILibrary.Theme.Primary,
            BorderSizePixel = 0,
            Size = UDim2.new(1, 0, 0, 35),
            Font = Enum.Font.Gotham,
            Text = "  " .. TabName,
            TextColor3 = UILibrary.Theme.TextDark,
            TextSize = 14,
            TextXAlignment = Enum.TextXAlignment.Left,
            AutoButtonColor = false
        })
        
        CreateElement("UICorner", {
            CornerRadius = UDim.new(0, 6),
            Parent = TabButton
        })
        
        -- Tab Content
        local TabContent = CreateElement("ScrollingFrame", {
            Name = "TabContent",
            Parent = ContentContainer,
            BackgroundTransparency = 1,
            BorderSizePixel = 0,
            Size = UDim2.new(1, 0, 1, 0),
            ScrollBarThickness = 4,
            ScrollBarImageColor3 = UILibrary.Theme.Accent,
            CanvasSize = UDim2.new(0, 0, 0, 0),
            Visible = false
        })
        
        local ContentList = CreateElement("UIListLayout", {
            Parent = TabContent,
            SortOrder = Enum.SortOrder.LayoutOrder,
            Padding = UDim.new(0, 10)
        })
        
        ContentList:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(function()
            TabContent.CanvasSize = UDim2.new(0, 0, 0, ContentList.AbsoluteContentSize.Y + 20)
        end)
        
        CreateElement("UIPadding", {
            Parent = TabContent,
            PaddingTop = UDim.new(0, 10),
            PaddingLeft = UDim.new(0, 5),
            PaddingRight = UDim.new(0, 5),
            PaddingBottom = UDim.new(0, 10)
        })
        
        TabButton.MouseButton1Click:Connect(function()
            for _, tab in pairs(Window.Tabs) do
                tab.Content.Visible = false
                Tween(tab.Button, {BackgroundColor3 = UILibrary.Theme.Primary, TextColor3 = UILibrary.Theme.TextDark})
            end
            
            TabContent.Visible = true
            Tween(TabButton, {BackgroundColor3 = UILibrary.Theme.Accent, TextColor3 = UILibrary.Theme.Text})
            Window.CurrentTab = Tab
        end)
        
        TabButton.MouseEnter:Connect(function()
            if Window.CurrentTab ~= Tab then
                Tween(TabButton, {BackgroundColor3 = UILibrary.Theme.Border})
            end
        end)
        
        TabButton.MouseLeave:Connect(function()
            if Window.CurrentTab ~= Tab then
                Tween(TabButton, {BackgroundColor3 = UILibrary.Theme.Primary})
            end
        end)
        
        -- If first tab, make it active
        if #Window.Tabs == 0 then
            TabContent.Visible = true
            TabButton.BackgroundColor3 = UILibrary.Theme.Accent
            TabButton.TextColor3 = UILibrary.Theme.Text
            Window.CurrentTab = Tab
        end
        
        Tab.Button = TabButton
        Tab.Content = TabContent
        table.insert(Window.Tabs, Tab)
        
        -- Create Section
        function Tab:CreateSection(name)
            local Section = {}
            
            local SectionFrame = CreateElement("Frame", {
                Name = "Section",
                Parent = TabContent,
                BackgroundColor3 = UILibrary.Theme.Secondary,
                BorderSizePixel = 0,
                Size = UDim2.new(1, -10, 0, 0),
                AutomaticSize = Enum.AutomaticSize.Y
            })
            
            CreateElement("UICorner", {
                CornerRadius = UDim.new(0, 8),
                Parent = SectionFrame
            })
            
            local SectionTitle = CreateElement("TextLabel", {
                Name = "SectionTitle",
                Parent = SectionFrame,
                BackgroundTransparency = 1,
                Position = UDim2.new(0, 10, 0, 5),
                Size = UDim2.new(1, -20, 0, 25),
                Font = Enum.Font.GothamBold,
                Text = name,
                TextColor3 = UILibrary.Theme.Text,
                TextSize = 15,
                TextXAlignment = Enum.TextXAlignment.Left
            })
            
            local SectionContent = CreateElement("Frame", {
                Name = "SectionContent",
                Parent = SectionFrame,
                BackgroundTransparency = 1,
                Position = UDim2.new(0, 0, 0, 30),
                Size = UDim2.new(1, 0, 0, 0),
                AutomaticSize = Enum.AutomaticSize.Y
            })
            
            local SectionList = CreateElement("UIListLayout", {
                Parent = SectionContent,
                SortOrder = Enum.SortOrder.LayoutOrder,
                Padding = UDim.new(0, 8)
            })
            
            CreateElement("UIPadding", {
                Parent = SectionContent,
                PaddingTop = UDim.new(0, 5),
                PaddingLeft = UDim.new(0, 10),
                PaddingRight = UDim.new(0, 10),
                PaddingBottom = UDim.new(0, 10)
            })
            
            Section.Frame = SectionFrame
            Section.Content = SectionContent
            
            -- Create Button
            function Section:CreateButton(config)
                config = config or {}
                local ButtonName = config.Name or "Button"
                local Callback = config.Callback or function() end
                
                local ButtonFrame = CreateElement("Frame", {
                    Parent = SectionContent,
                    BackgroundColor3 = UILibrary.Theme.Primary,
                    BorderSizePixel = 0,
                    Size = UDim2.new(1, 0, 0, 35)
                })
                
                CreateElement("UICorner", {
                    CornerRadius = UDim.new(0, 6),
                    Parent = ButtonFrame
                })
                
                local Button = CreateElement("TextButton", {
                    Parent = ButtonFrame,
                    BackgroundTransparency = 1,
                    Size = UDim2.new(1, 0, 1, 0),
                    Font = Enum.Font.Gotham,
                    Text = ButtonName,
                    TextColor3 = UILibrary.Theme.Text,
                    TextSize = 14
                })
                
                Button.MouseButton1Click:Connect(function()
                    Tween(ButtonFrame, {BackgroundColor3 = UILibrary.Theme.Accent}, 0.1)
                    task.wait(0.1)
                    Tween(ButtonFrame, {BackgroundColor3 = UILibrary.Theme.Primary}, 0.1)
                    pcall(Callback)
                end)
                
                Button.MouseEnter:Connect(function()
                    Tween(ButtonFrame, {BackgroundColor3 = UILibrary.Theme.Border})
                end)
                
                Button.MouseLeave:Connect(function()
                    Tween(ButtonFrame, {BackgroundColor3 = UILibrary.Theme.Primary})
                end)
            end
            
            -- Create Toggle
            function Section:CreateToggle(config)
                config = config or {}
                local ToggleName = config.Name or "Toggle"
                local Default = config.CurrentValue or false
                local Flag = config.Flag
                local Callback = config.Callback or function() end
                
                local ToggleState = Default
                
                local ToggleFrame = CreateElement("Frame", {
                    Parent = SectionContent,
                    BackgroundColor3 = UILibrary.Theme.Primary,
                    BorderSizePixel = 0,
                    Size = UDim2.new(1, 0, 0, 35)
                })
                
                CreateElement("UICorner", {
                    CornerRadius = UDim.new(0, 6),
                    Parent = ToggleFrame
                })
                
                local ToggleLabel = CreateElement("TextLabel", {
                    Parent = ToggleFrame,
                    BackgroundTransparency = 1,
                    Position = UDim2.new(0, 10, 0, 0),
                    Size = UDim2.new(1, -60, 1, 0),
                    Font = Enum.Font.Gotham,
                    Text = ToggleName,
                    TextColor3 = UILibrary.Theme.Text,
                    TextSize = 14,
                    TextXAlignment = Enum.TextXAlignment.Left
                })
                
                local ToggleButton = CreateElement("TextButton", {
                    Parent = ToggleFrame,
                    BackgroundColor3 = ToggleState and UILibrary.Theme.Accent or UILibrary.Theme.Border,
                    BorderSizePixel = 0,
                    Position = UDim2.new(1, -45, 0.5, -10),
                    Size = UDim2.new(0, 40, 0, 20),
                    Text = ""
                })
                
                CreateElement("UICorner", {
                    CornerRadius = UDim.new(1, 0),
                    Parent = ToggleButton
                })
                
                local ToggleIndicator = CreateElement("Frame", {
                    Parent = ToggleButton,
                    BackgroundColor3 = Color3.fromRGB(255, 255, 255),
                    BorderSizePixel = 0,
                    Position = ToggleState and UDim2.new(1, -18, 0.5, -8) or UDim2.new(0, 2, 0.5, -8),
                    Size = UDim2.new(0, 16, 0, 16)
                })
                
                CreateElement("UICorner", {
                    CornerRadius = UDim.new(1, 0),
                    Parent = ToggleIndicator
                })
                
                local Toggle = {}
                
                function Toggle:Set(value)
                    ToggleState = value
                    
                    if Flag then
                        UILibrary.Flags[Flag] = value
                    end
                    
                    Tween(ToggleButton, {BackgroundColor3 = value and UILibrary.Theme.Accent or UILibrary.Theme.Border})
                    Tween(ToggleIndicator, {Position = value and UDim2.new(1, -18, 0.5, -8) or UDim2.new(0, 2, 0.5, -8)})
                    
                    pcall(Callback, value)
                end
                
                ToggleButton.MouseButton1Click:Connect(function()
                    Toggle:Set(not ToggleState)
                end)
                
                if Flag then
                    UILibrary.Flags[Flag] = ToggleState
                end
                
                return Toggle
            end
            
            -- Create Slider
            function Section:CreateSlider(config)
                config = config or {}
                local SliderName = config.Name or "Slider"
                local Min = config.Min or 0
                local Max = config.Max or 100
                local Default = config.CurrentValue or Min
                local Increment = config.Increment or 1
                local Flag = config.Flag
                local Callback = config.Callback or function() end
                
                local SliderValue = Default
                
                local SliderFrame = CreateElement("Frame", {
                    Parent = SectionContent,
                    BackgroundColor3 = UILibrary.Theme.Primary,
                    BorderSizePixel = 0,
                    Size = UDim2.new(1, 0, 0, 50)
                })
                
                CreateElement("UICorner", {
                    CornerRadius = UDim.new(0, 6),
                    Parent = SliderFrame
                })
                
                local SliderLabel = CreateElement("TextLabel", {
                    Parent = SliderFrame,
                    BackgroundTransparency = 1,
                    Position = UDim2.new(0, 10, 0, 5),
                    Size = UDim2.new(1, -20, 0, 15),
                    Font = Enum.Font.Gotham,
                    Text = SliderName,
                    TextColor3 = UILibrary.Theme.Text,
                    TextSize = 14,
                    TextXAlignment = Enum.TextXAlignment.Left
                })
                
                local SliderValueLabel = CreateElement("TextLabel", {
                    Parent = SliderFrame,
                    BackgroundTransparency = 1,
                    Position = UDim2.new(0, 10, 0, 5),
                    Size = UDim2.new(1, -20, 0, 15),
                    Font = Enum.Font.GothamBold,
                    Text = tostring(Default),
                    TextColor3 = UILibrary.Theme.Accent,
                    TextSize = 14,
                    TextXAlignment = Enum.TextXAlignment.Right
                })
                
                local SliderBar = CreateElement("Frame", {
                    Parent = SliderFrame,
                    BackgroundColor3 = UILibrary.Theme.Border,
                    BorderSizePixel = 0,
                    Position = UDim2.new(0, 10, 0, 28),
                    Size = UDim2.new(1, -20, 0, 6)
                })
                
                CreateElement("UICorner", {
                    CornerRadius = UDim.new(1, 0),
                    Parent = SliderBar
                })
                
                local SliderFill = CreateElement("Frame", {
                    Parent = SliderBar,
                    BackgroundColor3 = UILibrary.Theme.Accent,
                    BorderSizePixel = 0,
                    Size = UDim2.new((Default - Min) / (Max - Min), 0, 1, 0)
                })
                
                CreateElement("UICorner", {
                    CornerRadius = UDim.new(1, 0),
                    Parent = SliderFill
                })
                
                local SliderButton = CreateElement("TextButton", {
                    Parent = SliderBar,
                    BackgroundTransparency = 1,
                    Size = UDim2.new(1, 0, 1, 0),
                    Text = ""
                })
                
                local Slider = {}
                local dragging = false
                
                function Slider:Set(value)
                    value = math.clamp(value, Min, Max)
                    value = math.floor(value / Increment + 0.5) * Increment
                    SliderValue = value
                    
                    if Flag then
                        UILibrary.Flags[Flag] = value
                    end
                    
                    SliderValueLabel.Text = tostring(value)
                    Tween(SliderFill, {Size = UDim2.new((value - Min) / (Max - Min), 0, 1, 0)}, 0.1)
                    
                    pcall(Callback, value)
                end
                
                SliderButton.InputBegan:Connect(function(input)
                    if input.UserInputType == Enum.UserInputType.MouseButton1 then
                        dragging = true
                    end
                end)
                
                SliderButton.InputEnded:Connect(function(input)
                    if input.UserInputType == Enum.UserInputType.MouseButton1 then
                        dragging = false
                    end
                end)
                
                UserInputService.InputChanged:Connect(function(input)
                    if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
                        local position = (input.Position.X - SliderBar.AbsolutePosition.X) / SliderBar.AbsoluteSize.X
                        position = math.clamp(position, 0, 1)
                        local value = Min + (Max - Min) * position
                        Slider:Set(value)
                    end
                end)
                
                if Flag then
                    UILibrary.Flags[Flag] = SliderValue
                end
                
                return Slider
            end
            
            -- Create Input
            function Section:CreateInput(config)
                config = config or {}
                local InputName = config.Name or "Input"
                local Default = config.CurrentValue or ""
                local Placeholder = config.PlaceholderText or "Enter text..."
                local Flag = config.Flag
                local Callback = config.Callback or function() end
                
                local InputFrame = CreateElement("Frame", {
                    Parent = SectionContent,
                    BackgroundColor3 = UILibrary.Theme.Primary,
                    BorderSizePixel = 0,
                    Size = UDim2.new(1, 0, 0, 60)
                })
                
                CreateElement("UICorner", {
                    CornerRadius = UDim.new(0, 6),
                    Parent = InputFrame
                })
                
                local InputLabel = CreateElement("TextLabel", {
                    Parent = InputFrame,
                    BackgroundTransparency = 1,
                    Position = UDim2.new(0, 10, 0, 5),
                    Size = UDim2.new(1, -20, 0, 20),
                    Font = Enum.Font.Gotham,
                    Text = InputName,
                    TextColor3 = UILibrary.Theme.Text,
                    TextSize = 14,
                    TextXAlignment = Enum.TextXAlignment.Left
                })
                
                local InputBox = CreateElement("TextBox", {
                    Parent = InputFrame,
                    BackgroundColor3 = UILibrary.Theme.Secondary,
                    BorderSizePixel = 0,
                    Position = UDim2.new(0, 10, 0, 30),
                    Size = UDim2.new(1, -20, 0, 25),
                    Font = Enum.Font.Gotham,
                    PlaceholderText = Placeholder,
                    PlaceholderColor3 = UILibrary.Theme.TextDark,
                    Text = Default,
                    TextColor3 = UILibrary.Theme.Text,
                    TextSize = 13,
                    TextXAlignment = Enum.TextXAlignment.Left,
                    ClearTextOnFocus = false
                })
                
                CreateElement("UICorner", {
                    CornerRadius = UDim.new(0, 4),
                    Parent = InputBox
                })
                
                CreateElement("UIPadding", {
                    Parent = InputBox,
                    PaddingLeft = UDim.new(0, 8),
                    PaddingRight = UDim.new(0, 8)
                })
                
                local Input = {}
                
                function Input:Set(value)
                    InputBox.Text = value
                    if Flag then
                        UILibrary.Flags[Flag] = value
                    end
                end
                
                InputBox.FocusLost:Connect(function(enterPressed)
                    local value = InputBox.Text
                    if Flag then
                        UILibrary.Flags[Flag] = value
                    end
                    pcall(Callback, value)
                end)
                
                if Flag then
                    UILibrary.Flags[Flag] = Default
                end
                
                return Input
            end
            
            -- Create Dropdown
            function Section:CreateDropdown(config)
                config = config or {}
                local DropdownName = config.Name or "Dropdown"
                local Options = config.Options or {}
                local Default = config.CurrentOption or (Options[1] or "None")
                local Flag = config.Flag
                local Callback = config.Callback or function() end
                
                local DropdownOpen = false
                local SelectedOption = Default
                
                local DropdownFrame = CreateElement("Frame", {
                    Parent = SectionContent,
                    BackgroundColor3 = UILibrary.Theme.Primary,
                    BorderSizePixel = 0,
                    Size = UDim2.new(1, 0, 0, 60),
                    ClipsDescendants = true
                })
                
                CreateElement("UICorner", {
                    CornerRadius = UDim.new(0, 6),
                    Parent = DropdownFrame
                })
                
                local DropdownLabel = CreateElement("TextLabel", {
                    Parent = DropdownFrame,
                    BackgroundTransparency = 1,
                    Position = UDim2.new(0, 10, 0, 5),
                    Size = UDim2.new(1, -20, 0, 20),
                    Font = Enum.Font.Gotham,
                    Text = DropdownName,
                    TextColor3 = UILibrary.Theme.Text,
                    TextSize = 14,
                    TextXAlignment = Enum.TextXAlignment.Left
                })
                
                local DropdownButton = CreateElement("TextButton", {
                    Parent = DropdownFrame,
                    BackgroundColor3 = UILibrary.Theme.Secondary,
                    BorderSizePixel = 0,
                    Position = UDim2.new(0, 10, 0, 30),
                    Size = UDim2.new(1, -20, 0, 25),
                    Font = Enum.Font.Gotham,
                    Text = SelectedOption,
                    TextColor3 = UILibrary.Theme.Text,
                    TextSize = 13,
                    TextXAlignment = Enum.TextXAlignment.Left
                })
                
                CreateElement("UICorner", {
                    CornerRadius = UDim.new(0, 4),
                    Parent = DropdownButton
                })
                
                CreateElement("UIPadding", {
                    Parent = DropdownButton,
                    PaddingLeft = UDim.new(0, 8)
                })
                
                local Arrow = CreateElement("TextLabel", {
                    Parent = DropdownButton,
                    BackgroundTransparency = 1,
                    Position = UDim2.new(1, -25, 0, 0),
                    Size = UDim2.new(0, 20, 1, 0),
                    Font = Enum.Font.GothamBold,
                    Text = "â–¼",
                    TextColor3 = UILibrary.Theme.TextDark,
                    TextSize = 12
                })
                
                local OptionsList = CreateElement("ScrollingFrame", {
                    Parent = DropdownFrame,
                    BackgroundColor3 = UILibrary.Theme.Secondary,
                    BorderSizePixel = 0,
                    Position = UDim2.new(0, 10, 0, 60),
                    Size = UDim2.new(1, -20, 0, 0),
                    ScrollBarThickness = 3,
                    ScrollBarImageColor3 = UILibrary.Theme.Accent,
                    CanvasSize = UDim2.new(0, 0, 0, 0)
                })
                
                CreateElement("UICorner", {
                    CornerRadius = UDim.new(0, 4),
                    Parent = OptionsList
                })
                
                local OptionsLayout = CreateElement("UIListLayout", {
                    Parent = OptionsList,
                    SortOrder = Enum.SortOrder.LayoutOrder,
                    Padding = UDim.new(0, 2)
                })
                
                OptionsLayout:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(function()
                    OptionsList.CanvasSize = UDim2.new(0, 0, 0, OptionsLayout.AbsoluteContentSize.Y)
                end)
                
                local Dropdown = {}
                
                function Dropdown:Set(value)
                    SelectedOption = value
                    DropdownButton.Text = value
                    
                    if Flag then
                        UILibrary.Flags[Flag] = value
                    end
                    
                    pcall(Callback, value)
                end
                
                function Dropdown:Refresh(newOptions, newDefault)
                    Options = newOptions or Options
                    
                    for _, child in pairs(OptionsList:GetChildren()) do
                        if child:IsA("TextButton") then
                            child:Destroy()
                        end
                    end
                    
                    for _, option in ipairs(Options) do
                        local OptionButton = CreateElement("TextButton", {
                            Parent = OptionsList,
                            BackgroundColor3 = UILibrary.Theme.Primary,
                            BorderSizePixel = 0,
                            Size = UDim2.new(1, 0, 0, 25),
                            Font = Enum.Font.Gotham,
                            Text = option,
                            TextColor3 = UILibrary.Theme.Text,
                            TextSize = 13,
                            TextXAlignment = Enum.TextXAlignment.Left
                        })
                        
                        CreateElement("UICorner", {
                            CornerRadius = UDim.new(0, 4),
                            Parent = OptionButton
                        })
                        
                        CreateElement("UIPadding", {
                            Parent = OptionButton,
                            PaddingLeft = UDim.new(0, 8)
                        })
                        
                        OptionButton.MouseButton1Click:Connect(function()
                            Dropdown:Set(option)
                            DropdownOpen = false
                            Tween(DropdownFrame, {Size = UDim2.new(1, 0, 0, 60)})
                            Tween(OptionsList, {Size = UDim2.new(1, -20, 0, 0)})
                            Tween(Arrow, {Rotation = 0})
                        end)
                        
                        OptionButton.MouseEnter:Connect(function()
                            Tween(OptionButton, {BackgroundColor3 = UILibrary.Theme.Border})
                        end)
                        
                        OptionButton.MouseLeave:Connect(function()
                            Tween(OptionButton, {BackgroundColor3 = UILibrary.Theme.Primary})
                        end)
                    end
                    
                    if newDefault then
                        Dropdown:Set(newDefault)
                    end
                end
                
                DropdownButton.MouseButton1Click:Connect(function()
                    DropdownOpen = not DropdownOpen
                    
                    if DropdownOpen then
                        local maxHeight = math.min(#Options * 27, 100)
                        Tween(DropdownFrame, {Size = UDim2.new(1, 0, 0, 65 + maxHeight)})
                        Tween(OptionsList, {Size = UDim2.new(1, -20, 0, maxHeight)})
                        Tween(Arrow, {Rotation = 180})
                    else
                        Tween(DropdownFrame, {Size = UDim2.new(1, 0, 0, 60)})
                        Tween(OptionsList, {Size = UDim2.new(1, -20, 0, 0)})
                        Tween(Arrow, {Rotation = 0})
                    end
                end)
                
                Dropdown:Refresh(Options, Default)
                
                if Flag then
                    UILibrary.Flags[Flag] = SelectedOption
                end
                
                return Dropdown
            end
            
            -- Create Label
            function Section:CreateLabel(text)
                local Label = CreateElement("TextLabel", {
                    Parent = SectionContent,
                    BackgroundTransparency = 1,
                    Size = UDim2.new(1, 0, 0, 25),
                    Font = Enum.Font.Gotham,
                    Text = text or "Label",
                    TextColor3 = UILibrary.Theme.TextDark,
                    TextSize = 13,
                    TextXAlignment = Enum.TextXAlignment.Left,
                    TextWrapped = true
                })
                
                local LabelObject = {}
                
                function LabelObject:Set(newText)
                    Label.Text = newText
                end
                
                return LabelObject
            end
            
            -- Create Keybind
            function Section:CreateKeybind(config)
                config = config or {}
                local KeybindName = config.Name or "Keybind"
                local Default = config.CurrentKeybind or "NONE"
                local Flag = config.Flag
                local Callback = config.Callback or function() end
                
                local KeybindValue = Default
                local Binding = false
                
                local KeybindFrame = CreateElement("Frame", {
                    Parent = SectionContent,
                    BackgroundColor3 = UILibrary.Theme.Primary,
                    BorderSizePixel = 0,
                    Size = UDim2.new(1, 0, 0, 35)
                })
                
                CreateElement("UICorner", {
                    CornerRadius = UDim.new(0, 6),
                    Parent = KeybindFrame
                })
                
                local KeybindLabel = CreateElement("TextLabel", {
                    Parent = KeybindFrame,
                    BackgroundTransparency = 1,
                    Position = UDim2.new(0, 10, 0, 0),
                    Size = UDim2.new(1, -90, 1, 0),
                    Font = Enum.Font.Gotham,
                    Text = KeybindName,
                    TextColor3 = UILibrary.Theme.Text,
                    TextSize = 14,
                    TextXAlignment = Enum.TextXAlignment.Left
                })
                
                local KeybindButton = CreateElement("TextButton", {
                    Parent = KeybindFrame,
                    BackgroundColor3 = UILibrary.Theme.Secondary,
                    BorderSizePixel = 0,
                    Position = UDim2.new(1, -75, 0.5, -12),
                    Size = UDim2.new(0, 70, 0, 24),
                    Font = Enum.Font.GothamBold,
                    Text = KeybindValue,
                    TextColor3 = UILibrary.Theme.Text,
                    TextSize = 12
                })
                
                CreateElement("UICorner", {
                    CornerRadius = UDim.new(0, 4),
                    Parent = KeybindButton
                })
                
                local Keybind = {}
                
                function Keybind:Set(key)
                    KeybindValue = key
                    KeybindButton.Text = key
                    
                    if Flag then
                        UILibrary.Flags[Flag] = key
                    end
                end
                
                KeybindButton.MouseButton1Click:Connect(function()
                    Binding = true
                    KeybindButton.Text = "..."
                end)
                
                UserInputService.InputBegan:Connect(function(input, gameProcessed)
                    if Binding then
                        local key = input.KeyCode.Name
                        if key ~= "Unknown" then
                            Keybind:Set(key)
                            Binding = false
                        end
                    elseif input.KeyCode.Name == KeybindValue and not gameProcessed then
                        pcall(Callback)
                    end
                end)
                
                if Flag then
                    UILibrary.Flags[Flag] = KeybindValue
                end
                
                return Keybind
            end
            
            -- Create ColorPicker
            function Section:CreateColorPicker(config)
                config = config or {}
                local PickerName = config.Name or "Color Picker"
                local Default = config.Color or Color3.fromRGB(255, 255, 255)
                local Flag = config.Flag
                local Callback = config.Callback or function() end
                
                local ColorValue = Default
                
                local PickerFrame = CreateElement("Frame", {
                    Parent = SectionContent,
                    BackgroundColor3 = UILibrary.Theme.Primary,
                    BorderSizePixel = 0,
                    Size = UDim2.new(1, 0, 0, 35)
                })
                
                CreateElement("UICorner", {
                    CornerRadius = UDim.new(0, 6),
                    Parent = PickerFrame
                })
                
                local PickerLabel = CreateElement("TextLabel", {
                    Parent = PickerFrame,
                    BackgroundTransparency = 1,
                    Position = UDim2.new(0, 10, 0, 0),
                    Size = UDim2.new(1, -50, 1, 0),
                    Font = Enum.Font.Gotham,
                    Text = PickerName,
                    TextColor3 = UILibrary.Theme.Text,
                    TextSize = 14,
                    TextXAlignment = Enum.TextXAlignment.Left
                })
                
                local ColorDisplay = CreateElement("TextButton", {
                    Parent = PickerFrame,
                    BackgroundColor3 = ColorValue,
                    BorderSizePixel = 0,
                    Position = UDim2.new(1, -35, 0.5, -10),
                    Size = UDim2.new(0, 30, 0, 20),
                    Text = ""
                })
                
                CreateElement("UICorner", {
                    CornerRadius = UDim.new(0, 4),
                    Parent = ColorDisplay
                })
                
                CreateElement("UIStroke", {
                    Parent = ColorDisplay,
                    Color = UILibrary.Theme.Border,
                    Thickness = 1
                })
                
                local ColorPicker = {}
                
                function ColorPicker:Set(color)
                    ColorValue = color
                    ColorDisplay.BackgroundColor3 = color
                    
                    if Flag then
                        UILibrary.Flags[Flag] = color
                    end
                    
                    pcall(Callback, color)
                end
                
                ColorDisplay.MouseButton1Click:Connect(function()
                    -- Simple color randomizer for demo (you can expand this with a full picker)
                    local r = math.random(0, 255)
                    local g = math.random(0, 255)
                    local b = math.random(0, 255)
                    ColorPicker:Set(Color3.fromRGB(r, g, b))
                end)
                
                if Flag then
                    UILibrary.Flags[Flag] = ColorValue
                end
                
                return ColorPicker
            end
            
            return Section
        end
        
        return Tab
    end
    
    -- Create Notification
    function Window:Notify(config)
        config = config or {}
        local Title = config.Title or "Notification"
        local Content = config.Content or "This is a notification"
        local Duration = config.Duration or 3
        local Icon = config.Image
        
        local NotifFrame = CreateElement("Frame", {
            Parent = ScreenGui,
            BackgroundColor3 = UILibrary.Theme.Primary,
            BorderSizePixel = 0,
            Position = UDim2.new(1, -320, 1, 0),
            Size = UDim2.new(0, 300, 0, 80),
            ClipsDescendants = true
        })
        
        CreateElement("UICorner", {
            CornerRadius = UDim.new(0, 8),
            Parent = NotifFrame
        })
        
        CreateElement("UIStroke", {
            Parent = NotifFrame,
            Color = UILibrary.Theme.Border,
            Thickness = 2
        })
        
        local NotifTitle = CreateElement("TextLabel", {
            Parent = NotifFrame,
            BackgroundTransparency = 1,
            Position = UDim2.new(0, 15, 0, 10),
            Size = UDim2.new(1, -30, 0, 20),
            Font = Enum.Font.GothamBold,
            Text = Title,
            TextColor3 = UILibrary.Theme.Text,
            TextSize = 15,
            TextXAlignment = Enum.TextXAlignment.Left
        })
        
        local NotifContent = CreateElement("TextLabel", {
            Parent = NotifFrame,
            BackgroundTransparency = 1,
            Position = UDim2.new(0, 15, 0, 35),
            Size = UDim2.new(1, -30, 0, 35),
            Font = Enum.Font.Gotham,
            Text = Content,
            TextColor3 = UILibrary.Theme.TextDark,
            TextSize = 13,
            TextXAlignment = Enum.TextXAlignment.Left,
            TextYAlignment = Enum.TextYAlignment.Top,
            TextWrapped = true
        })
        
        Tween(NotifFrame, {Position = UDim2.new(1, -320, 1, -100)}, 0.5)
        
        task.delay(Duration, function()
            Tween(NotifFrame, {Position = UDim2.new(1, -320, 1, 0)}, 0.5)
            task.wait(0.5)
            NotifFrame:Destroy()
        end)
    end
    
    return Window
end

-- Load Notification
task.spawn(function()
    local LoadingGui = CreateElement("ScreenGui", {
        Name = "LoadingScreen",
        Parent = CoreGui,
        ZIndexBehavior = Enum.ZIndexBehavior.Sibling
    })
    
    local LoadingFrame = CreateElement("Frame", {
        Parent = LoadingGui,
        BackgroundColor3 = UILibrary.Theme.Primary,
        BorderSizePixel = 0,
        Position = UDim2.new(0.5, -150, 0.5, -50),
        Size = UDim2.new(0, 300, 0, 100)
    })
    
    CreateElement("UICorner", {
        CornerRadius = UDim.new(0, 10),
        Parent = LoadingFrame
    })
    
    local LoadingText = CreateElement("TextLabel", {
        Parent = LoadingFrame,
        BackgroundTransparency = 1,
        Size = UDim2.new(1, 0, 0.5, 0),
        Font = Enum.Font.GothamBold,
        Text = "Loading UI Library...",
        TextColor3 = UILibrary.Theme.Text,
        TextSize = 16
    })
    
    local ProgressBar = CreateElement("Frame", {
        Parent = LoadingFrame,
        BackgroundColor3 = UILibrary.Theme.Border,
        BorderSizePixel = 0,
        Position = UDim2.new(0.1, 0, 0.65, 0),
        Size = UDim2.new(0.8, 0, 0, 6)
    })
    
    CreateElement("UICorner", {
        CornerRadius = UDim.new(1, 0),
        Parent = ProgressBar
    })
    
    local Progress = CreateElement("Frame", {
        Parent = ProgressBar,
        BackgroundColor3 = UILibrary.Theme.Accent,
        BorderSizePixel = 0,
        Size = UDim2.new(0, 0, 1, 0)
    })
    
    CreateElement("UICorner", {
        CornerRadius = UDim.new(1, 0),
        Parent = Progress
    })
    
    Tween(Progress, {Size = UDim2.new(1, 0, 1, 0)}, 1.5)
    task.wait(1.5)
    LoadingGui:Destroy()
end)

return UILibrary
